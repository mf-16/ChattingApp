<Window x:Class="ChatClient.View.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChatWindow" 
        ResizeMode="CanResizeWithGrip">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListBox Name="listBox" Grid.Row="0" Margin="0,10,0,10" SelectionChanged="ListBox_SelectionChanged"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <TextBox Name="messageText" TextWrapping="Wrap" Margin="10" Height="50" VerticalAlignment="Center" Grid.Column="0" 
                     KeyDown="MessageText_KeyDown" />

            <Grid Grid.Column="1">
                <Button Content="Send" Margin="10" Height="50" HorizontalAlignment="Stretch" VerticalAlignment="Center" 
                        Click="Button_Click" />
            </Grid>

            <Grid Grid.Column="2">
                <Button Content="Exit" Margin="10" Height="50" HorizontalAlignment="Stretch" VerticalAlignment="Center" 
                        Click="ExitButton_Click" />
            </Grid>
        </Grid>
    </Grid>
</Window>
